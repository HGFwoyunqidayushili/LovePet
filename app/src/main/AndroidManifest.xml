<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jiyun.com.lovepet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".api.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
 
        <activity android:name=".ui.pet.activity.LoginActivity">

        <activity android:name=".ui.HomeActivity">
        <activity android:name=".ui.BaseActivity" />
        <activity android:name=".ui.pet.activity.MyPetActivity" />
        <activity android:name=".ui.wallet.activity.MyWalletActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.pet.activity.BingPhoneActivity" />
        <activity android:name=".ui.pet.activity.ToolbarActivity" />
        <activity android:name=".ui.pet.activity.WeChatActivity" />
        <activity android:name=".ui.pet.activity.RegisterActivity"></activity>
    </application>

</manifest>