<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="￥价格"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:textColor="#FFB197"
        android:id="@+id/priceHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:id="@+id/titleHome"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ratingBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.1/Km"
        android:id="@+id/juliHome"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/contentHome"

     />

    <jiyun.com.lovepet.utils.CircleImageView
        android:layout_width="50dp"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageHome"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/titleHome"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textSize="@dimen/dp8"
      android:layout_marginRight="@dimen/dp5"
        android:id="@+id/contentHome"
        android:layout_alignBottom="@+id/imageHome"
        android:layout_toEndOf="@+id/imageHome" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"

        style="@style/foodRatingBar"
        android:layout_below="@+id/titleHome"
        android:layout_toEndOf="@+id/imageHome" />
</RelativeLayout>