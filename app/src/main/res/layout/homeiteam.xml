<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue52">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="@dimen/dp30"
            android:gravity="center"/>
    </LinearLayout>
    <!--主体内容-->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
<ImageView
    android:id="@+id/userXinXi"
    android:layout_width="0dp"
    android:layout_weight="0.44"
    android:layout_height="wrap_content"
    android:src="@mipmap/my"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
          android:layout_width="200dp"
          android:layout_height="50dp"
          android:background="@drawable/rounded_edittext"
          android:hint="地区/街道/小区"
          android:id="@+id/editText" />


</RelativeLayout>
      <ImageView

          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/intentTo_Map"
          android:layout_weight="0.45"
          android:src="@mipmap/map"/>

  </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

       <CheckBox
           android:id="@+id/shaixuan1"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:drawableRight="@drawable/shuaixuan"
           android:layout_marginRight="18dp"
           android:text="宠物类型"
           android:textSize="15dp"
           android:button="@null"></CheckBox>


        <CheckBox
            android:id="@+id/shaixuan2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/shuaixuan"
            android:layout_marginRight="18dp"
            android:textSize="15dp"
            android:text="附近优先"
            android:button="@null"
            />
        <CheckBox
            android:id="@+id/shaixuan3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:drawableRight="@drawable/shuaixuan"
            android:text="筛选"
            android:button="@null"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorLightGray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:id="@+id/listView"></ListView>
</LinearLayout>