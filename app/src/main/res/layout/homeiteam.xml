<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--主体内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userXinXi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:src="@mipmap/my" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:hint="地区/街道/小区" />


        </RelativeLayout>

        <ImageView

            android:id="@+id/intentTo_Map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:src="@mipmap/map" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/shaixuan1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/a"
            android:text="宠物类型"
            android:textSize="18dp"></CheckBox>


        <CheckBox
            android:id="@+id/shaixuan2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/a"
            android:text="宠物类型"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/shaixuan3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/a"
            android:text="宠物类型"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorLightGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <ListView
        android:id="@+id/listView_Screening"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"></ListView>
</LinearLayout>